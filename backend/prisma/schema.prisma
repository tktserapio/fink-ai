generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // e.g. mongodb+srv://user:pass@cluster.mongodb.net/dbname
}

model Note {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  contents  MediaContent[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  participants String[]
  tags      String[]
  meetingContext Json?
  aiInsights Json?
}

type MediaContent {
  id        String
  type      String // 'text', 'audio', 'pdf', 'image', 'video'
  content   String // text content or file URL/path
  timestamp DateTime @default(now())
  metadata  Json?
}